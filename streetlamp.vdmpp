class StreetLamp

instance variables
    private on : bool := false;
    public sensor : Sensor;

operations
    public StreetLamp : real ==> StreetLamp
    StreetLamp(p_position) ==
        sensor := new Sensor(p_position);

    public On : () ==> ()
    On() ==
        on := true;

    public Off : () ==> ()
    Off() ==
        on := false;

end StreetLamp