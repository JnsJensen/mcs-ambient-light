class StreetLamp is subclass of GLOBAL

instance variables
    private on : StreetLampState := <OFF>;
    public sensor : Sensor;
    public road : Road;
    public position : real; -- position along the road in meters

operations
    StreetLamp : Road * real ==> StreetLamp
    StreetLamp(p_road, p_position) == (
        position := p_position;
        sensor := new Sensor(p_road, p_position);
        road := p_road;
    );

    public On : () ==> ()
    On() ==
        on := true;

    public Off : () ==> ()
    Off() ==
        on := false;

end StreetLamp